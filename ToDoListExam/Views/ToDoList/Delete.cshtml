@model ToDoListExam.ToDoList.ToDoListItem

@{
    ViewData["Title"] = "Видалення";
}

<h1>Видалення</h1>

<h3>Ви впевнені, що хочете видалити цю справу?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Назва</dt>
        <dd class = "col-sm-10">@Model.Name</dd>
        <dt class = "col-sm-2">Опис</dt>
        <dd class = "col-sm-10">@Model.Description</dd>
        <dt class = "col-sm-2">Категорія</dt>
        <dd class = "col-sm-10">@Model.Category.CategoryName</dd>
        <dt class = "col-sm-2">Статус</dt>
        <dd class = "col-sm-10">@Model.IsEnded</dd>
        <dt class = "col-sm-2">Пріорітет</dt>
        <dd class = "col-sm-10">@Model.Priority</dd>
        <dt class = "col-sm-2">Дата створення</dt>
        <dd class = "col-sm-10">@Model.CreationDate.ToShortDateString()</dd>
        <dt class = "col-sm-2">Виконати до</dt>
        <dd class = "col-sm-10">@Model.CompleteDate.ToShortDateString()</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Назад до списку</a>
    </form>
</div>
